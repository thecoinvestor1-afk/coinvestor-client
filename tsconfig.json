{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@types/*": ["./src/types/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@actions/*": ["./src/actions/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],
      "@emoji/*": ["./public/static/emoji/*"],
      "@gifs/*": ["./public/static/gifs/*"],
      "@images/*": ["./public/static/images/*"],
      "@location/*": ["./public/static/location/*"],
      "@animation/*": ["./public/static/animation/*"],
      "@brand/*": ["./public/static/brand/*"],
      "@icon/*": ["./public/static/icon/*"],
      "@store/*": ["./src/store"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
